<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exception_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exception Example:\n 1. Handle Exception From Native\n
        2.Exception catch by Native and return back to App\n
        3. Fatal Exception from Native"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sample_text" />

    <TextView
        android:id="@+id/exception_demo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exception result"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exception_demo_text"
        app:layout_constraintBottom_toBottomOf="@+id/exception_detail_text" />


</androidx.constraintlayout.widget.ConstraintLayout>